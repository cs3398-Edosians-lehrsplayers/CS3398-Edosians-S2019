{
  "name": "Micro Learning Extension",
  "version": "1.0",
  "description": "A Google Chrome extension that will help you learn about new topics on the fly!",
  "background": {
    "scripts": ["backgroundContextMenus.js"],
    "persistent": true
  },
  "permissions": ["activeTab","declarativeContent", "contextMenus", "storage"],

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/ml_brain16.png",
      "32": "images/ml_brain32.png",
      "48": "images/ml_brain64.png",
      "128": "images/ml_brain128.png"
    }
  },
  "icons": {
    "16": "images/ml_brain16.png",
    "32": "images/ml_brain32.png",
    "48": "images/ml_brain64.png",
    "128": "images/ml_brain128.png"
  },

  "options_page": "options.html",

  "manifest_version": 2
}